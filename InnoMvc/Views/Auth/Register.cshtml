@page
@model UserViewModel
@{
    ViewData["Title"] = "Register";
}

<form id="registerForm" method="post">
    <h2>Create a new account.</h2>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="row">
        <div class="col-6">
            <div class="form-floating mb-3">
                <input asp-for="ADI" class="form-control" autocomplete="firstname" aria-required="true" placeholder="first name" />
                <label asp-for="ADI">First Name</label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-floating mb-3">
                <input asp-for="SOYADI" class="form-control" autocomplete="lastname" aria-required="true" placeholder="last name" />
                <label asp-for="SOYADI">Last Name</label>
            </div>
        </div>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="KULLANICI_ADI" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        <label asp-for="KULLANICI_ADI">Email</label>
        <span asp-validation-for="KULLANICI_ADI" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="ID" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
        <label asp-for="ID">Password</label>
        <span asp-validation-for="ID" class="text-danger"></span>
    </div>
    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
</form>
